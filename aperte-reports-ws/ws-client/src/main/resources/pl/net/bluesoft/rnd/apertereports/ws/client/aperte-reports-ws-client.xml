<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="webServiceClient" class="pl.net.bluesoft.rnd.apertereports.ws.client.ReportGeneratorWebServiceClient">
        <constructor-arg ref="messageFactory"/>
        <constructor-arg ref="marshaller"/>
        <property name="enableLogging" value="false"/>
    </bean>

    <bean id="messageFactory" class="org.springframework.ws.soap.saaj.SaajSoapMessageFactory"/>

    <bean id="marshaller" class="pl.net.bluesoft.rnd.apertereports.ws.utils.ClasspathScanningJAXB2Marshaller">
        <property name="basePackage" value="pl.net.bluesoft.rnd.apertereports.common.xml.ws"/>
        <property name="mtomEnabled" value="true"/>
    </bean>

</beans>
