<?xml version="1.0" encoding="UTF-8"?>
<!-- Jboss web descriptor -->
<jboss-web>
	<!-- Necessary to force Jboss to use hibernate dependecies bundled with 
		Aprete Reptorts (those embedded in Jboss can be obsolete) -->
	<class-loading java2ClassLoadingCompliance="false">
		<loader-repository>
			org.apertereports:loader=aperte-reports-web
			<loader-repository-config>java2ParentDelegation=false
			</loader-repository-config>
		</loader-repository>
	</class-loading>

	<!-- Reference to JNDI data source -->
	<resource-ref>
		<res-ref-name>jdbc/aperte-reports</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<jndi-name>java:jdbc/aperte-reports</jndi-name>
	</resource-ref>
</jboss-web>